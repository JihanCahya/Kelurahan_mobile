<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailInformasiActivity"
    >

    <ImageView
        android:id="@+id/imageDetailBantuan"
        android:layout_width="264dp"
        android:layout_height="143dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvJudulBantuanDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDetailBantuan" />

    <TextView
        android:id="@+id/tvTglBantuanDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/tvJudulBantuanDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulBantuanDetail" />

    <TextView
        android:id="@+id/tvIsiBantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#020202"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvTglBantuanDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvTglBantuanDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>